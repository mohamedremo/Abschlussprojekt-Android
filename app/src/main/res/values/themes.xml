<resources>
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary Color: Himmelblau -->
        <item name="colorPrimary">#89CFF0</item>
        <item name="colorOnPrimary">#FFFFFF</item> <!-- Weiß für guten Kontrast auf Blau -->
        <item name="colorPrimaryContainer">#C5E4F6</item> <!-- Hellere Variante des Primärfarbtons -->
        <item name="colorOnPrimaryContainer">#003A5B</item> <!-- Dunklere Blaunuance für guten Kontrast -->

        <!-- Secondary Color: Korallenorange -->
        <item name="colorSecondary">#FF7F50</item>
        <item name="colorOnSecondary">#FFFFFF</item> <!-- Weiß für guten Kontrast auf Orange -->
        <item name="colorSecondaryContainer">#2196F3</item> <!-- Hellere Variante des Sekundärfarbtons -->
        <item name="colorOnSecondaryContainer">#5A2B18</item> <!-- Dunklere Braunnuance für Kontrast -->

        <!-- Tertiary Color: Sattbraun -->
        <item name="colorTertiary">#8B4513</item>
        <item name="colorOnTertiary">#FFFFFF</item> <!-- Weiß für Kontrast auf Braun -->
        <item name="colorTertiaryContainer">#C8875E</item> <!-- Hellere Variante des Tertiärfarbtons -->
        <item name="colorOnTertiaryContainer">#4E260A</item> <!-- Dunklere Braunnuance für Kontrast -->

        <!-- Error Color: Rot -->
        <item name="colorError">#B00020</item>
        <item name="colorOnError">#FFFFFF</item> <!-- Weiß für Kontrast auf Rot -->
        <item name="colorErrorContainer">#FCD8DF</item> <!-- Hellroter Container -->
        <item name="colorOnErrorContainer">#370009</item> <!-- Dunkles Rot für Kontrast -->

        <!-- Background Colors -->
        <item name="android:colorBackground">#FFFFFF</item> <!-- Weiß als Hintergrund -->
        <item name="colorOnBackground">#003A5B</item> <!-- Dunkler Blauton für Text auf Weiß -->

        <!-- Surface Colors -->
        <item name="colorSurface">#FFFFFF</item> <!-- Weiß als Oberfläche -->
        <item name="colorOnSurface">#003A5B</item> <!-- Dunkler Blauton für Text auf Weiß -->
        <item name="colorSurfaceVariant">#F0F4F8</item> <!-- Hellgrau für eine Variante der Oberfläche -->
        <item name="colorOnSurfaceVariant">#4E260A</item> <!-- Dunkelbraun als Kontrastfarbe -->

        <!-- Outline and Inverse Colors -->
        <item name="colorOutline">#003A5B</item> <!-- Dunkles Blau für Konturen -->
        <item name="colorOutlineVariant">#4E260A</item> <!-- Dunkelbraun als alternative Konturfarbe -->
        <item name="colorSurfaceInverse">#003A5B</item> <!-- Dunkelblau für invertierte Oberflächen -->
        <item name="colorOnSurfaceInverse">#FFFFFF</item> <!-- Weiß auf invertierten Oberflächen -->

        <!-- Fixed Colors -->
        <item name="colorPrimaryFixed">#89CFF0</item>
        <item name="colorOnPrimaryFixed">#FFFFFF</item>
        <item name="colorPrimaryFixedDim">#C5E4F6</item>
        <item name="colorOnPrimaryFixedVariant">#003A5B</item>

        <item name="colorSecondaryFixed">#FF7F50</item>
        <item name="colorOnSecondaryFixed">#FFFFFF</item>
        <item name="colorSecondaryFixedDim">#FFB59C</item>
        <item name="colorOnSecondaryFixedVariant">#5A2B18</item>

        <item name="colorTertiaryFixed">#8B4513</item>
        <item name="colorOnTertiaryFixed">#FFFFFF</item>
        <item name="colorTertiaryFixedDim">#C8875E</item>
        <item name="colorOnTertiaryFixedVariant">#4E260A</item>

        <!-- Surface Variants -->
        <item name="colorSurfaceDim">#E5EFF5</item>
        <item name="colorSurfaceBright">#FFFFFF</item>
        <item name="colorSurfaceContainerLowest">#F9FBFD</item>
        <item name="colorSurfaceContainerLow">#F1F7FA</item>
        <item name="colorSurfaceContainer">#E5EFF5</item>
        <item name="colorSurfaceContainerHigh">#D7E3EA</item>
        <item name="colorSurfaceContainerHighest">#C9D7E0</item>
    </style>

    <!-- Standard TextView Style -->
    <style name="AppTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">#003A5B</item> <!-- Dunkler Blauton als Textfarbe -->
        <item name="android:textSize">16sp</item> <!-- Standard Textgröße -->
    </style>

    <!-- Optional: Light Text Appearance -->
    <style name="AppTextLightAppearance" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/montserrat_extralight</item>
        <item name="android:textColor">#003A5B</item> <!-- Anpassung der Textfarbe für Konsistenz -->
    </style>

    <!-- Optional: ExtraLight Text Appearance -->
    <style name="AppTextExtraLightAppearance" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/montserrat_thin</item>
        <item name="android:textColor">#003A5B</item> <!-- Anpassung der Textfarbe für Konsistenz -->
    </style>

</resources>