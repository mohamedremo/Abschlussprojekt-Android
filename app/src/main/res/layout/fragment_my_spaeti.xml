<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MySpaeti.MySpaetiFragment">

    <Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </Toolbar>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:fontFamily="@font/montserrat"
        android:text="MySpäti"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar3" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat_thin"
        android:text="AlleProdukte"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/toolbar3" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:scrollbars="none"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- Button 1 -->
            <Button
                android:id="@+id/filter_button_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lebensmittel"
                android:layout_margin="4dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>

            <!-- Button 2 -->
            <Button
                android:id="@+id/filter_button_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Getränke"
                android:layout_margin="4dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>

            <!-- Weitere Buttons hinzufügen -->
            <Button
                android:id="@+id/filter_button_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Snacks"
                android:layout_margin="4dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>

            <!-- Weitere Buttons hinzufügen -->
            <Button
                android:id="@+id/filter_button_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Snacks"
                android:layout_margin="4dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>
            <!-- Weitere Buttons hinzufügen -->
            <Button
                android:id="@+id/filter_button_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Snacks"
                android:layout_margin="4dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>
            <!-- Weitere Buttons hinzufügen -->
            <Button
                android:id="@+id/filter_button_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Snacks"
                android:layout_margin="4dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>

        </LinearLayout>



    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
        app:spanCount="2"
        tools:listitem="@layout/list_all_product" />


</androidx.constraintlayout.widget.ConstraintLayout>