<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Hintergrundfarbe des EditText -->
    <solid android:color="#00FFFFFF"/> <!-- Setze die gewünschte Hintergrundfarbe -->

    <!-- Eckenradius für runde Form -->
    <corners android:radius="25dp"/> <!-- Erhöhe den Wert für rundere Ecken -->

    <!-- Optionale Ränder -->
    <stroke
        android:width="2dp"
        android:color="@color/md_theme_primary"/> <!-- Setze Randfarbe und -breite -->

    <!-- Optionaler Innenabstand -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/>
</shape>